@model BKStore_MVC.ViewModel.RegisterBS

@{
    ViewData["Title"] = "Register";
}
<style>
    h1 {
        color: lightblue;
        font-weight: bold;
        text-align: center;
    }

    .back {
        line-height: 40px;
        margin-bottom: 10px;
        color: white;
        background-color: black;
        text-decoration: none;
        font-size: 1.1em;
        font-weight: 600;
        padding: 0.9375em 2.97em;
        letter-spacing: 1px;
        border-radius: 15px;
        transition: 0.7s ease;
        margin-left:660px;
      
        
    }

    .back:hover {
        color: lightblue;
        background-color: rgb(22, 22, 22);
        
    }

    .btn-primary {
        color: white;
        background-color: black;
        text-decoration: none;
        font-size: 1.1em;
        font-weight: 600;
        padding: 0.9375em 2.97em;
        letter-spacing: 1px;
        border-radius: 15px;
        margin-bottom: 30px;
        transition: 0.7s ease;
        margin-top: 10px;
    }

    .btn-primary:hover {
        color: lightblue;
        background-color: rgb(22, 22, 22);
        transform: scale(1.1);
    }

    .form-group {
        margin-top: 10px;
        margin-bottom: 10px;
        font-weight: 600;
        font-size: 1.2em;
        text-align: center;
    }

    /* Media queries for responsiveness */
    @@media (max-width: 991px) {
        .form-group {
            font-size: 1.1em;
        }

        .btn-primary, .back {
            font-size: 0.9em;
            padding: 0.5em 1.5em;
        }

        h1 {
            font-size: 1.8em;
        }

        
    }

    @@media (max-width: 767px) {
        .form-group {
            font-size: 1em;
        }

        .btn-primary, .back {
            font-size: 0.8em;
            padding: 0.4em 1.2em;
        }

        h1 {
            font-size: 1.5em;
        }
    }

    @@media (max-width: 575px) {
        .btn-primary {
            width: 100%;
        }

        .back {
            margin: 0 auto;
            display: block;
            text-align: center;
        }

        .form-group {
            font-size: 0.9em;
        }
    }
</style>

<h1>Register</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <form asp-action="SaveRegister" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your name" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="example@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center">
                <input type="submit" value="Create" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<a href="#" class="back">Back</a>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
